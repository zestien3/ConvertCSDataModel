{
    "version": "2.0.0",
    "tasks": [ {
        "label": "build",
        "command": "dotnet",
        "type": "shell",
        "args": [
            "build",
            "${workspaceFolder}\\ConvertCSDataModel.csproj",
            "--no-restore"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [
            "$msCompile"
        ]
    },
    {
        "label": "release-build",
        "command": "dotnet",  
        "type": "shell",
        "args": [
            "publish",
            "-c",
            "Release",
            "-r",
            "win-x64",
            "${workspaceFolder}\\ConvertCSDataModel.csproj"
        ],
        "group": {
            "kind": "build",
            "isDefault": false
        },
        "problemMatcher": [
            "$msCompile"
        ]
    },
    {
        "label": "NuGet Restore",
        "command": "dotnet",  
        "type": "shell",
        "args": [
            "restore",
            "${workspaceFolder}\\ConvertCSDataModel.csproj"
        ],
        "problemMatcher": [
            "$msCompile"
        ]
    },
    {
        "label": "publish",
        "dependsOn": "release-build",
        "command": "pwsh.exe",
        "type": "process",
        "args": [
            "-Command",
            "Copy-Item",
            "-Verbose",
            "-Path",
            "${workspaceFolder}\\bin\\Release\\net10.0\\win-x64\\publish\\*.*",
            "-Include",
            "*.exe,*.dll,*.xml,*.runtimeconfig.json",
            "-Destination",
            "C:\\Users\\Peter\\.dotnet\\tools\\"
        ],
        "group": {
            "kind": "build",
            "isDefault": false
        }
    } ]
}