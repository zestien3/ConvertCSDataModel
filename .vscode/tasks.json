{
  "version": "2.0.0",
  "tasks": [ {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}\\ConvertCSDataModel.csproj"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "release-build",
      "command": "dotnet",  
      "type": "shell",
      "args": [
        "publish",
        "-c",
        "Release",
        "-r",
        "win-x64",
        "${workspaceFolder}\\ConvertCSDataModel.csproj"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "publish",
      "dependsOn": "release-build",
      "command": "copy",
      "type": "shell",
      "args": [
        "-Path",
        "${workspaceFolder}\\bin\\Release\\net8.0\\win-x64\\publish\\",
        "-Include",
        "*.exe,*.dll,*.xml",
        "-Destination",
        "C:\\Users\\Peter\\.dotnet\\tools\\"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}